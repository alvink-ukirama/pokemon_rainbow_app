<div class="container text-center">
  <div class="row align-items-start">
    <div class="col">
        <%= image_tag @pokedex.image_url, style: "width: 450px; height: 450px" %>
    </div>
     <div class="col text-start">
      <div class="bg-light">
          <h1 class="text-dark"><%= @pokedex.name.capitalize %></h1>
          <p class="fs-1">Element Type : <%= @pokedex.element_type.capitalize %></p>
          <p class="fs-1">HP : <%= @pokedex.base_health_point %></p>
          <p class="fs-1">Attack : <%= @pokedex.base_attack %></p>
          <p class="fs-1">Defence : <%= @pokedex.base_defence %></p>
          <p class="fs-1">Speed : <%= @pokedex.base_speed %></p>
      </div> 
    </div>
  </div>
</div>