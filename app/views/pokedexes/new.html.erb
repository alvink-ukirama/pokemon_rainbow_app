<div class="container text-center inline">
    <h1 class="text-dark">Add Pokemon</h1>
</div>

<div class="container bg-light">
  <div>
    <%= form_with(model: @pokemon, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name%>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name..' %>
      </div>
      <div class="form-group">
        <%= f.label :element_type, "Element Type"%>
        <%= f.select :element_type, Elements::ELEMENT_TYPE.map {|e| [e.capitalize, e]}, {:include_blank => "Element Type"}, class: "form-select form-select-lg" %>
      </div>
      <div class="form-group">
        <%= f.label :base_health_point, "HP"%>
        <%= f.text_field :base_health_point, class: 'form-control', placeholder: 'HP..' %>
      </div>
      <div class="form-group">
        <%= f.label :base_attack, "Attack"%>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Attack..' %>
      </div>
      <div class="form-group">
        <%= f.label :base_defence, "Defence"%>
        <%= f.text_field :base_defence, class: 'form-control', placeholder: 'Defence..' %>
      </div>
      <div class="form-group">
        <%= f.label :image_url, "Image URL"%>
        <%= f.text_field :image_url, class: 'form-control', placeholder: 'Image URL..' %>
      </div>

      <div class="text-center">
        <%= f.submit "Catch!", class: "btn btn-primary btn-lg text-center" %>
      </div>
    <% end %>
  </div>
</div>